<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >
        <ImageView
            android:id="@+id/img_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_head"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            ></ImageView>

        <TextView
            android:id="@+id/tv_friendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友用户名"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@+id/img_head"
            android:layout_toEndOf="@+id/img_head"
            ></TextView>
        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证信息"
            android:layout_below="@+id/tv_friendName"
            android:layout_alignStart="@+id/tv_friendName"
            android:layout_marginTop="5dp"
            ></TextView>

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@+id/btn_refuse"

            android:text="拒绝"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            ></Button>

        <Button
            android:id="@+id/btn_refuse"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"

            android:text="同意"
            android:layout_centerVertical="true"
            ></Button>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>