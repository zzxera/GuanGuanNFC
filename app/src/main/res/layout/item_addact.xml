<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="添加一个新活动"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="活动类型"
        app:layout_constraintBottom_toBottomOf="@+id/et_actType"
        app:layout_constraintEnd_toStartOf="@+id/et_actType"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/et_actType"></TextView>

    <EditText
        android:id="@+id/et_actType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="90dp"
        android:focusable="false"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"></EditText>

    <TextView
        android:id="@+id/text_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动名称"
        app:layout_constraintBottom_toBottomOf="@+id/et_actName"
        app:layout_constraintStart_toStartOf="@+id/text_type"
        app:layout_constraintTop_toTopOf="@+id/et_actName"></TextView>


    <EditText
        android:id="@+id/et_actName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_actType"
        ></EditText>

    <Button
        android:id="@+id/btn_confirmAdd"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="确定"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_actName"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"

        app:layout_constraintTop_toBottomOf="@+id/btn_confirmAdd"
        ></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>