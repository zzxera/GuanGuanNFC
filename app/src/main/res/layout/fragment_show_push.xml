<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lay_showpush"
        android:layout_width="370dp"
        android:layout_height="599dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="70dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/lay_showpush2"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:orientation="vertical"
            android:background="@drawable/img_push1">

            <TextView
                android:id="@+id/tv_push_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="标题"
                android:textSize="30sp"
                app:layout_constraintHorizontal_bias="0.5" />

            <TextView
                android:id="@+id/tv_push_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="作者"
                android:textSize="20sp"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_push_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="内容"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/tv_push_pinlun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="内容"
            android:textSize="20sp"></TextView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
